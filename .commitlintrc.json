{
    "rules": {
        "body-leading-blank": [1, "always"],
        "footer-leading-blank": [1, "always"],
        "subject-empty": [2, "never"],
        "subject-full-stop": [2, "never", "."],
        "type-case": [2, "always", "lower-case"],
        "type-empty": [2, "never"],
        "type-enum": [
            2,
            "always",
            [
                "chore",
                "chore_",
                "docs",
                "docs_",
                "feat",
                "feat_",
                "fix",
                "fix_",
                "perf",
                "perf_",
                "refactor",
                "refactor_",
                "revert",
                "style",
                "style_",
                "test",
                "test_",
                "wip",
                "wip_"
            ]
        ]
    }
}
